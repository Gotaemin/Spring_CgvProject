<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.tm.cgv.bbs.BbsDAO">
	<insert id="bbsWrite" parameterType="com.tm.cgv.bbs.BbsDTO">
		insert into bbs values (bbs_seq.nextVal,#{title},sysdate,0,#{contents},#{id})
	</insert>

	<delete id="bbsDelete" parameterType="java.lang.Integer">
		delete from bbs where no = #{no}
	</delete>
</mapper>